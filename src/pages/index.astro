---
import Layout from '../layouts/Layout.astro';

// Helper function to create proper asset URLs
const getAssetUrl = (path: string) => {
  const base = import.meta.env.BASE_URL;
  return base.endsWith('/') ? `${base}${path}` : `${base}/${path}`;
};
---

<Layout title="The Sixth Wood - Enter the World of I'lyr">
  <!-- Hero Section -->
  <section class="relative py-12 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 to-emerald-900/80"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-center">
        <div class="lg:col-span-7">
          <!-- Upcoming Release Badge -->
          <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-500/20 text-amber-300 border border-amber-500/30 mb-4">
            <span class="w-2 h-2 bg-amber-400 rounded-full mr-2 animate-pulse"></span>
            Upcoming Release
          </div>
          <p class="text-6xl font-bold text-emerald-400 mb-6 font-['Cinzel']">
            The Sixth Wood
          </p>
          <p class="text-xl md:text-2xl text-slate-300 mb-8 leading-relaxed">
            Enter the mystical world of <span class="text-emerald-400 font-semibold">I'lyr</span>, where harmonies grant powers and an ancient entity‚Äîbanished and bound to another realm of reality‚Äîthreatens to return and corrupt.
          </p>
          <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-2xl">
            Join Iris Evershade as she discovers her ability to work with a rare and suppressed harmony that challenges everything the Arbories teach about natural order.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a href={getAssetUrl('book')} class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors duration-200 text-center">
              Discover the Book
            </a>
            <a href={getAssetUrl('stories')} class="border border-emerald-600 text-emerald-400 hover:bg-emerald-600 hover:text-white px-8 py-3 rounded-lg font-semibold transition-colors duration-200 text-center">
              Read Short Stories
            </a>
          </div>

          <!-- Newsletter Signup -->
          <div class="max-w-md">
            <label class="block text-sm font-medium text-slate-300 mb-2">
              Stay updated on all the news from I'lyr
            </label>
            <script src="https://f.convertkit.com/ckjs/ck.5.js"></script>
