---
import Layout from '../layouts/Layout.astro';

// Helper function to create proper asset URLs
const getAssetUrl = (path: string) => {
  const base = import.meta.env.BASE_URL;
  return base.endsWith('/') ? `${base}${path}` : `${base}/${path}`;
};
---

<Layout title="The Sixth Wood - Enter the World of I'lyr">
  <!-- Hero Section -->
  <section class="relative py-12 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 to-emerald-900/80"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-center">
        <div class="lg:col-span-7">
          <p class="text-6xl font-bold text-emerald-400 mb-6 font-['Cinzel']">
            The Sixth Wood
          </p>
          <p class="text-xl md:text-2xl text-slate-300 mb-8 leading-relaxed">
            Enter the mystical world of <span class="text-emerald-400 font-semibold">I'lyr</span>, where harmonics shape reality and an ancient corruption struggles to find it way back from banishment in the Threshold Realm.
          </p>
          <p class="text-lg text-slate-400 mb-8 max-w-2xl">
            Follow Iris Evershade as she discovers her ability to work with threshold harmonics‚Äîa rare and suppressed form of magic that challenges everything the Arbories teach about the nature of reality.
